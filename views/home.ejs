    <title>Login</title>
  </head>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <body>
    <div class="content" id="home">
      <header>
        <img src="assets/logo.png" />
      </header>
      <div id="bg">
        <div class="ball top"></div>
        <div class="ball bottom"></div>
      </div>
      <main>
        <div class="container">
          <section>
            <h2>Insira seus Dados</h2>
            <form>
              <label class="sr-only" for="room-id">Usuario</label>
              <input type="text" id="login" placeholder="Usuario" />
              <input type="password" id="senha" placeholder="Senha" />
              <button onclick="logar(); return false ">
                <img src="assets/enter-room.svg" />
                Login
              </button>
            </form>

            <script>
              function logar(request, response) {
                const login = document.getElementById("login").value;
                const senha = document.getElementById("senha").value;

                if (login === "admin@1pay.com.br" && senha === "Mudar@2022") {
                  window.location.href = "web";
                } else {
                  swal.fire({
                    title: '<h2 class="text">Erro!</h2>',
                    html: '<h2 class="text">Senha ou usu√°rio incorreto</h2>',
                    icon: "error",
                    width: "30%",
                    padding: "4rem",
                    confirmButtonText: '<h2 class="btn-swal"> Ok </h2> ',
                  });
                }
              }
            </script>
          </section>
          <div class="separator">
            <div></div>
            <div>ou</div>
            <div></div>
          </div>
          <section>
            <h2>Sem Acesso ?</h2>
            <h2 style="font-size: 20px; margin-top: -20px">
              Entre em contato com o ADM !
            </h2>
            <a href="mailto:gabriel.vieira@1pay.com.br" class="button outlined">
              <img src="assets/users.svg" />
              Clique Aqui
            </a>
          </section>
        </div>
      </main>
    </div>
